<?xml version='1.0' encoding='ISO-8859-1'?>
<!DOCTYPE swatch SYSTEM "swatch.dtd">

<swatch name="WORDPRESS_NODE_CUR_NORM">
    <!-- Base -->
    <sat shape="diskShp" transfo="baseTrf" hover="hoverEvt" click="clickEvt" dblClk="dblClkEvt" isSub="true" isCur="true">
        <slice inCol="190 165 255" outCol="238 242 245"/>
        <slice inCol="238 242 245" outCol="238 242 245">
            <transfo scale=".83"/>
        </slice>
    </sat>

    <!-- Rest Spots -->
    <sat shape="diskShp" isSub="true">
        <slice inCol="239 32 120" outCol="238 242 245" transfo="spotTrf"/>
    </sat>

    <!-- Cur Spot -->
    <sat shape="diskShp" isSub="true" isRest="false" isCur="true">
        <slice inCol="239 32 120" outCol="238 242 245" transfo="spotTrf"/>
    </sat>

    <!-- Rest Titles -->
    <sat shape="voidShp" click="clickEvt" dblClk="dblClkEvt" isSub="true" isTip="true">
        <transfo map="interpol">
            <polar dir="0" rad="1.3"/>
        </transfo>
        <slice>
            <tip font="nameFnt" label="@nameStr" textCol="34 34 34" isCorner="true"/>
        </slice>
    </sat>

    <!-- General purpose Selection -->
    <!-- Sel sats must be declared before the ones they should hides when they'll be activated -->
    <sat shape="voidShp" isSub="true" selection="search">
        <transfo map="interpol">
            <polar dir="0" rad="1.2"/>
        </transfo>
        <slice>
            <tip font="selFnt" label="{sTITLE}" inCol="255 0 0" textCol="@whiteCol" isCorner="true"/>
        </slice>
    </sat>

    <!-- Cur Title -->
    <sat shape="voidShp" click="clickEvt" dblClk="dblClkEvt" isSub="true" isRest="false" isCur="true">
        <transfo map="interpol">
            <polar dir="0" rad="1.2"/>
        </transfo>
        <slice>
            <tip font="nameFnt" label="@nameStr" inCol="34 34 34" textCol="@whiteCol" rounded="10" isCorner="true"/>
        </slice>
    </sat>

    <!-- References -->
    <string id="nameStr" label="{sTITLE}"/>

    <color id="blackCol" rgb="000000"/>
    <color id="whiteCol" rgb="ffffff"/>
    <color id="hLinkDrkCol" rgb="0 0 127"/>
    <color id="hLinkCol" rgb="0 0 255"/>
    <color id="hLinkLitCol" rgb="191 191 255"/>

    <shape id="voidShp"/>
    <shape id="diskShp" scale="1"/>
    <shape id="spotShp" scale="0.2"/>

    <font id="nameFnt" name="Helvetica" size="12" style="bold"/>
    <font id="italicFnt" name="Helvetica" size="12" style="italic"/>
    <font id="selFnt" name="Helvetica" size="12" style="bold" />

    <transfo id="spotTrf" scale="0.2"/>
    <transfo id="imgTrf" scale="0.4"/>
    <transfo id="baseTrf" map="interpol">
        <polar dir="90" rad="1"/>
    </transfo>
    <transfo id="selTrf" map="interpol">
        <polar dir="0" rad="1.4"/>
    </transfo>

    <tip id="textTip" font="nameFnt" label="@nameStr" textCol="@blackCol" isCorner="true"/>

    <!-- Hover event -->
    <event id="hoverEvt">
        <show status="Cliquez pour afficher le menu de '{sTITLE}'. Double-cliquez pour afficher sa fiche."/>
    </event>

    <!-- Click event -->
    <event id="clickEvt">
        <popup menu="menu"/>
    </event>
    <menu id="menu" font="menuFnt">
        <item label="Afficher" font="nameFnt" url="javascript:DisplayNode({sID},{sSLUG},{sTITLE})" />
        <item label="Centrer sur la carte" font="nameFnt"  url="javascript:DiscoverNode({sID},{sSLUG},{sTITLE})" />
        <separator />
        <menu id="submenu" label="[+80sPOSS_NAME]" font="menuFnt">
            <item label="Afficher" url="javascript:DisplayLink([sPOSS_ID],[sPOSS_NAME])" />
            <item label="Center sur la carte" url="javascript:DiscoverLink([sPOSS_ID],[sPOSS_NAME])" />
        </menu>
    </menu>
    <font id="menuFnt" name="Monospaced" size="11"/>

    <!-- DblClkEvt event -->
    <event id="dblClkEvt">
        <open url="javascript:DisplayNode({sID},{sSLUG},{sTITLE})" />
    </event>
</swatch>
